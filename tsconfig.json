{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "strict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src"]
}
